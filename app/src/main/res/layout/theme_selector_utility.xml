<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/AppTheme"
    android:background="@drawable/dialog_bg_acerca_de"
    android:padding="10dp"
    android:gravity="center_vertical|center_horizontal">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_1"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:gravity="left">
        <com.hctrom.romcontrol.prefs.CircleView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:id="@+id/colorTomato"
            android:elevation="0dp"
            app:fillColor="@color/myAccentColorTomato" />
        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_colorpicker_swatch_selected"
            android:id="@+id/checkTomato"/>
        <com.hctrom.romcontrol.prefs.CircleView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:id="@+id/colorTangerine"
            android:layout_centerInParent="false"
            android:layout_centerHorizontal="true"
            app:fillColor="@color/myAccentColorTangerine" />
        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_colorpicker_swatch_selected"
            android:layout_centerInParent="true"
            android:id="@+id/checkTangerine" />
        <com.hctrom.romcontrol.prefs.CircleView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:id="@+id/colorBanana"
            android:layout_alignParentEnd="true"
            app:fillColor="@color/myAccentColorBanana" />
        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_colorpicker_swatch_selected"
            android:layout_alignParentEnd="true"
            android:id="@+id/checkBanana"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_2"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:gravity="left"
        android:layout_below="@id/rl_1">
        <com.hctrom.romcontrol.prefs.CircleView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:id="@+id/colorBasil"
            android:elevation="0dp"
            app:fillColor="@color/myAccentColorBasil" />
        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_colorpicker_swatch_selected"
            android:id="@+id/checkBasil"/>
        <com.hctrom.romcontrol.prefs.CircleView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:id="@+id/colorSage"
            android:layout_centerInParent="false"
            android:layout_centerHorizontal="true"
            app:fillColor="@color/myAccentColorSage" />
        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_colorpicker_swatch_selected"
            android:layout_centerInParent="true"
            android:id="@+id/checkSage"/>
        <com.hctrom.romcontrol.prefs.CircleView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:id="@+id/colorPeacock"
            android:layout_alignParentEnd="true"
            app:fillColor="@color/myAccentColorPeacock" />
        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_colorpicker_swatch_selected"
            android:layout_alignParentEnd="true"
            android:id="@+id/checkPeacock"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_3"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:gravity="left"
        android:layout_below="@id/rl_2">
        <com.hctrom.romcontrol.prefs.CircleView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:id="@+id/colorBlueberry"
            app:fillColor="@color/myAccentColorBlueberry" />
        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_colorpicker_swatch_selected"
            android:id="@+id/checkBlueberry"/>
        <com.hctrom.romcontrol.prefs.CircleView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:id="@+id/colorLavender"
            android:layout_centerInParent="false"
            android:layout_centerHorizontal="true"
            app:fillColor="@color/myAccentColorLavender" />
        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_colorpicker_swatch_selected"
            android:layout_centerInParent="true"
            android:id="@+id/checkLavender"/>
        <com.hctrom.romcontrol.prefs.CircleView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:id="@+id/colorGrape"
            android:layout_alignParentEnd="true"
            app:fillColor="@color/myAccentColorGrape" />
        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_colorpicker_swatch_selected"
            android:layout_alignParentEnd="true"
            android:id="@+id/checkGrape"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_4"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:gravity="left"
        android:layout_below="@id/rl_3">
        <com.hctrom.romcontrol.prefs.CircleView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:id="@+id/colorFlamingo"
            app:fillColor="@color/myAccentColorFlamingo" />
        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_colorpicker_swatch_selected"
            android:id="@+id/checkFlamingo"/>
        <com.hctrom.romcontrol.prefs.CircleView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:id="@+id/colorGraphite"
            android:layout_centerInParent="false"
            android:layout_centerHorizontal="true"
            app:fillColor="@color/myAccentColorGraphite" />
        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_colorpicker_swatch_selected"
            android:layout_centerInParent="true"
            android:id="@+id/checkGraphite"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_5"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:gravity="left"
        android:layout_below="@id/rl_4">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/myRadioGroup"
            android:orientation="horizontal"
            android:checkedButton="@+id/dark">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dark"
                android:text="Modo Dark" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/light"
                android:text="Modo Light"
                android:layout_gravity="right"
                android:layout_marginLeft="20dp" />

        </RadioGroup>
    </RelativeLayout>
</RelativeLayout>
